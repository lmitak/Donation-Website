<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="initial-scale=1.0, user-scalable=no">
    <title></title>
    <link type="text/css" rel="stylesheet" href="css/stil.css"/>
    <link rel="stylesheet" type="text/css" href="css/grid.css"/>
	<link rel="stylesheet" href="css/fontello.css"/>
<link href='http://fonts.googleapis.com/css?family=Open+Sans:400,300,300italic,400italic,600' rel='stylesheet' type='text/css'>


</head>
<body>
<header>
    <div class="row">
	<div id="logo">
        <a href="main">
  <h1>
    Logo
  </h1>
</a>
</div>
<div id="navigacija">
		{%  if  app.session.get('user') %}
		{% set user = app.session.get('user') %}
		
		{% if user['isAdmin'] %}
		
		<ul>
			
			<li><a href="postavke">{{ header.postavke_link }}</a>
			<li><a href="logout">{{ header.odjava_link }}</a></li>
            <li>
                <ul>
                    <li><a href="lang =hrv" id="{{ header.hrv }}">{{ header.hrv }}</a></li>
                    <li><a href="lang =eng">{{ header.eng }}</a></li>
                </ul>
            </li>
			
		</ul>
		
		{% else %}
		<ul>
			
			<li><a href="profil">{{ header.profil_link }}</a>
			<li><a href="logout">{{ header.odjava_link }}</a></li>
            <li>
                <ul>
                    <li><a href="lang =hrv" id="{{ header.hrv }}">{{ header.hrv }}</a></li>
                    <li><a href="lang =eng">{{ header.eng }}</a></li>
                </ul>
            </li>
			
		</ul>
      {% endif %}
{% else %}
    <ul>
            <li><a href="prijava">{{ header.prijava_link }}</a></li>
            <li>
                {{ header.registriraj_se_text }}<br>
                <a href="registracija">{{ header.registracija_link }}</a>
            </li>
            <li>
                <ul>
                    <li><a href="lang =hrv" id="{{ header.hrv }}">{{ header.hrv }}</a></li>
                    <li><a href="lang =eng">{{ header.eng }}</a></li>
                </ul>
            </li>
			
        </ul>
{% endif %}
</div>
      
    </div>
</header>

<div id="content">
    {% block content %}


    {% endblock %}

</div>

<footer>
    <div class="row">
		</br>
        <h1>{{ footer.o_nama_naslov }}</h1>
        <p>
            {{ footer.disclaimer }}
        </p>
        <p>
            {{ footer.kontakt }}
        </p>
        <p>{{ footer.copyright }}</p>
		</br>
    </div>
</footer>
</body>
<script src="http://maps.googleapis.com/maps/api/js?language=hr&libraries=places"></script>
